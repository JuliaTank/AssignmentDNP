<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="" style="text-align: center; font-family: -webkit-body; font-size: 30px">Family Manager</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/main"  style="font-family: -webkit-body;font-size: 20px">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Policy="LoggedUser">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="AddPerson"  style="font-family: -webkit-body;font-size: 20px">
                <span class="oi oi-person" aria-hidden="true"></span> Add person
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="PeopleList"  style="font-family: -webkit-body;font-size: 20px" >
                <span class="oi oi-people" aria-hidden="true" ></span> People list
            </NavLink>
        </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}